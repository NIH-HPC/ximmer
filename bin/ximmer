#!/bin/bash

BASE=`cd $(dirname $0 | xargs dirname); pwd`

unset GROOVY_HOME

mkdir -p .ximmertmp

if [ "$1" == "install" ];
then
    $BASE/eval/tools/bpipe/0.9.9.3/bin/bpipe install $BASE/eval/pipeline/exome_cnv_pipeline.groovy 
else

    JAVA_OPTS="-noverify -Xmx12g -Dsnappy.disable=true -Djava.io.tmpdir=./.ximmertmp -Dximmer.base=$BASE" \
        $BASE/eval/pipeline/tools/groovy/2.4.6/bin/groovy \
        -cp $BASE/src/main/groovy:$BASE/eval/pipeline/tools/groovy-ngs-utils/1.0.6/groovy-ngs-utils.jar \
            $BASE/src/main/groovy/Ximmer.groovy $*
fi

